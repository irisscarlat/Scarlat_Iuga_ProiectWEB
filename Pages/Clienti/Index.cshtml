@page
@model Scarlat_Iuga_ProiectWEB.Pages.Clients.IndexModel

<h1>Clients</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Nume</th>
            <th>Email</th>
            <th>Telefon</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Client)
        {
            <tr>
                <td>@item.Nume</td>
                <td>@item.Email</td>
                <td>@item.Telefon</td>
                <td>
                    <a asp-page="Edit" asp-route-id="@item.ID">Edit</a> |
                    <a asp-page="Details" asp-route-id="@item.ID">Details</a> |
                    <a asp-page="Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
